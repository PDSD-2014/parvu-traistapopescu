<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/meetingName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="TextView" />

    <EditText
        android:id="@+id/messageInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/meetingName"
        android:layout_toRightOf="@+id/button1"
        android:ems="10" />

    <ListView
        android:id="@+id/meetingFriendList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/messageInput"
        android:divider="@android:color/transparent"
  		android:dividerHeight="10.0sp">

    </ListView>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/messageInput"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/messageInput"
        android:onClick="sendMessage"
        android:text="Send" />

</RelativeLayout>
